<%- include('layouts/header') %>
    <%- include('layouts/nav') %>
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-6">
                    <h1>
                        <%= title %>
                    </h1>

                    <% if (!contact) { %>
                        <div class="alert alert-danger fw-bold" role="alert">
                            Contact is not found. <a href="/contact" class="alert-link fw-normal">Back to Contact
                                List</a>
                        </div>
                        <% } else { %>
                            <div class="card mt-3">
                                <div class="card-body">
                                    <h3 class="card-title">
                                        <%= contact.data.name %>
                                    </h3>
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <%= contact.data.phone %>
                                    </h6>
                                    <p class="card-text">
                                        <%= contact.data.email %>
                                    </p>
                                    <p class="card-text">
                                        Created at : <strong>
                                            <%= contact.created_at %>
                                        </strong>
                                    </p>
                                    <a href="/contact" class="card-link">Back to Contact List</a>
                                </div>
                            </div>
                            <% } %>
                </div>
            </div>
        </div>
        <%- include('layouts/footer') %>